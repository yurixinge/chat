<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/rv_iv_contracts_picture"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin ="@dimen/activity_horizontal_margin"
        android:contentDescription="@string/contracts_picture" />
    <TextView
        android:id="@+id/rv_iv_contracts_name"
        android:layout_toRightOf="@+id/rv_iv_contracts_picture"
        android:layout_toEndOf="@+id/rv_iv_contracts_picture"
        android:layout_alignTop ="@+id/rv_iv_contracts_picture"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="18sp"
        android:gravity="start"/>
    <TextView
        android:id="@+id/rv_iv_contracts_signature"
        android:layout_toRightOf="@+id/rv_iv_contracts_picture"
        android:layout_toEndOf="@+id/rv_iv_contracts_picture"
        android:layout_below="@+id/rv_iv_contracts_name"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textSize="18sp"
        android:gravity="center"/>
    <View
        android:layout_height="1px"
        android:layout_width="match_parent"
        android:layout_marginLeft ="@dimen/activity_horizontal_margin"
        android:layout_marginRight ="@dimen/activity_horizontal_margin"
        android:background="#66CCFF" />

</RelativeLayout>